@model IEnumerable<CEvery.Models.Customer>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
@if(User.Identity.GetUserName().Equals("ramesh")){
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th></th>
}
    </tr>

@foreach (var item in Model) {
    <tr>
@if(User.Identity.GetUserName().Equals("ramesh")){
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SNo }) |
            @Html.ActionLink("Details", "Details", new { id=item.SNo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SNo })
        </td>
}
    </tr>
}

@if (User.Identity.GetUserName() != "ramesh")
{
    <Span>You are not authorized to view this page.</Span>
}

</table>
